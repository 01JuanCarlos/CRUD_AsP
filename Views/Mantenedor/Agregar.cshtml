@model ProductoModel
@{
    ViewData["Title"] = "Agregar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Agregar</h1>


<div class="card-body">

    <form asp-action="Agregar" asp-controller="Mantenedor" method="post">
        <h5 class="card-header">Agregar Producto</h5>
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input asp-for="nombre" type="text" class="form-control">
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                
                <select asp-for="idtipo"  name="idtipo">

                    <option   value="1">Accesorio</option>

                    <option  value="2">Parte</option>

                    <option  value="3">Otro</option>

                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Precio</label>
                <input asp-for="precio" type="number" class="form-control">
                <span asp-validation-for="precio" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Fecha</label>
                <input asp-for="fecha" type="date" class="form-control">
                <span asp-validation-for="fecha" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Foto</label>
                <input asp-for="foto" type="file" name="foto"class="form-control">

            </div>

            <button type="submit" class="btn btn-primary">Agregar</button>
        </div>
        <a asp-action="Listar" asp-controller="Mantenedor" class="btn btn-warning">volver a la lista</a>

    </form>

</div>
